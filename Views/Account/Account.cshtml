@model JecPizza.Models.AccountModel
@using JecPizza.Models.Repositories
@{
    ViewBag.Title = "Account";
    Layout = "~/Views/_Header.cshtml";
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link href="~/Content/Css/AccountStyle.css" rel="stylesheet" />

}
@{
    Member member = Model.AccountData;
}

<div class="wrapper ">
    <div class="account__body _container">
        <div class="account__toplayout toplayout">
            <h1 class="toplayout__header">Account</h1>
            <div class="toplayout__img_field">
                <div class="toplayout__img">
                    <img src="~/Content/Images/avatar1/@member.Img" alt="img">
                </div>
                <input type="file" accept="image/*" name="img" id="file_sel">
                <label for="file_sel" class="toplayout__change_img"></label>
            </div>

            <h2 class="toplayout__user-name" >ようこそ　@member.MemberName　さん！</h2>
            <ul class="toplayout__categories categories">
                <li class="categories__item _active">
                    <input type="radio" name="group1" id="chk1" />
                    <a name="chk1" href="#s1" onclick="myFunction('s1')">アカウント</a>
                </li>
                <li class="categories__item">
                    <input type="radio" name="group1" id="chk2" />
                    <a name="chk2" href="#s2" onclick="myFunction('s2')">パスワード変更</a>
                </li>
                <li class="categories__item">
                    <input type="radio" name="group1" id="chk3" />
                    <a name="chk3" href="#s3" onclick="myFunction('s3')">アドレス更新</a>
                </li>
                <li class="categories__item">
                    <input type="radio" name="group1" id="chk4" />
                    <a name="chk4" href="#s4" onclick="myFunction('s4')">注文履歴</a>
                </li>
                <li class="categories__item">
                    <input type="radio" name="group1" id="chk5" />
                    <a name="chk5" href="#s5" onclick="myFunction('s5')">プライバシー</a>
                </li>
                <li class="categories__item">
                    <input type="radio" name="group1" id="chk6" />
                    <a name="chk6" href="#s6" onclick="myFunction('s6')">通知</a>
                </li>
                <li class="categories__item">
                    <input type="radio" name="group1" id="chk7" />
                    <a name="chk7" href="#s7" onclick="myFunction('s7')">写真</a>
                </li>
                <li class="categories__item">
                    <input type="radio" name="group1" id="chk8" />
                    <a name="chk8" href="#s8" onclick="myFunction('s8')">アドレス削除</a>
                </li>
            </ul>
        </div>

        <div class="account__bottomlayout bottomlayout">

            <div id="s1" class="bottomlayout__account account section" style="display: block;">
                <form action="GET" class="account__form form">
                    <div class="form-group">
                        <label for="txbUserName">ユーザー名</label>
                        <input type="text" class="form-control" id="txbUserName" name="userNameBox" value=@member.UserName>
                    </div>
                    <div class=" form-group">
                        <label for="txbName">名前</label>
                        <input type="text" class="form-control" id="txbName" name="nameBox" value=@member.MemberName>
                    </div>
                    <div class=" form-group">
                        <label for="addressBox">アドレス</label>
                        <input type="text" class="form-control" id="addressBox" name="addressBox" value=@member.Address>
                    </div>
                    <div class=" form-group">
                        <label for="txbMail">メールアドレス</label>
                        <input type="email" class="form-control" id="txbMail" name="txbMail" value=@member.Email>
                    </div>
                    <div class=" form-group">
                        <label for="txbPhoneNum">電話番号</label>
                        <input type="text" class="form-control" id="txbPhoneNum" name="txbPhoneNum" value=@member.Tel>
                    </div>
                    <div class="text-right">
                        <button type="submit" class="btn btn-primary ">更新</button>
                    </div>
                </form>
            </div>

            <div id="s2" class="bottomlayout__changepass changepass section" style="display: none;">
                <form action="GET" class="changepass__form form">
                    <div class="form-group">
                        <label for="oldPassBox">現在のパスワード</label>
                        <input type="password" class="form-control" required id="oldPassBox" name="oldPassBox">
                    </div>
                    <div class="form-group">
                        <label for="txbNewPass">新しいパスワード</label>
                        <input type="password" class="form-control" required id="txbNewPass" name="txbNewPass">

                    </div>
                    <div class="form-group">
                        <label for="txbConfPass">パスワード再入力</label>
                        <input type="password" class="form-control" required id="txbConfPass" name="txbConfPass">
                    </div>
                    <div class="text-right">
                        <button type="submit" class="btn btn-primary ">更新</button>
                    </div>
                </form>
            </div>

            <div id="s3" class="bottomlayout__address address section" style="display: none;">
                <form action="GET" class="address__form form">
                    <div class="form-group">
                        <label for="oldAddressBox">現在のアドレス</label>
                        <input type="text" class="form-control" required id="oldAddressBox" name="oldAddressBox" value=@member.Address>
                    </div>
                    <div class="form-group">
                        <label for="txbNewAddress">新しいアドレス</label>
                        <input type="text" class="form-control" required id="txbNewAddress" name="txbNewAddress">

                    </div>
                    <div class="form-group">
                        <label for="txbConfAddress">アドレス再入力</label>
                        <input type="text" class="form-control" required id="txbConfAddress" name="txbConfAddress">
                    </div>
                    <div class="text-right">
                        <button type="submit" class="btn btn-primary ">更新</button>
                    </div>
                </form>
            </div>

            <div id="s4" class="bottomlayout__orders oreders section"  style="display: none;">
                <div class="form">
                    @{
                        var ls = new HashSet<string>();

                        foreach (DataRow purchases in Model.AccountPurchaseData.Rows)
                        {
                            ls.Add(purchases["purid"].ToString());
                        }
                    }

                    @foreach (String value in ls)
                    {
                        <button class="collapsible">注文が確定いたしました - 注文コード： @value</button>
                        <div class="content table2">
                            <table>
                                <thead>
                                    <tr>
                                        <th>商品</th>
                                        <th>個数</th>
                                        <th>値段</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{ string purDate = null; string purTotal = null; }
                                    @foreach (DataRow purchases in Model.AccountPurchaseData.Rows)
                                    {
                                        if (value == purchases["purid"].ToString())
                                        {
                                        <tr>
                                            <td>
                                                <div class="product-image">
                                                    <img src="/Content/Images/Pizza/@purchases["GoodsImage"]" alt="">
                                                    <p>@purchases["goodsname"]</p>
                                                </div>
                                            </td>
                                            <td>@purchases["num"]</td>
                                            <td>@purchases["price"]</td>
                                        </tr>
                                            purDate = DateTime.Parse(purchases["purdate"].ToString()).ToString("D");
                                            purTotal = purchases["total"].ToString();
                                        }
                                    }
                                        <tr>
                                            <td>注文が確定いたしました - @purDate</td>
                                            <td></td>
                                            <td>@purTotal</td>
                                        </tr>
                                </tbody>
                            </table>
                        </div>
                     }
                </div>
            </div>

