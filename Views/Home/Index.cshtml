
@model JecPizza.Models.GoodsModel
@section Styles
{
    <link rel="stylesheet" href="~/Content/Css/style.css">
}
@{
    ViewBag.Title = "PizzaSite";
    Layout = "../_Header.cshtml";
}

@using (Html.BeginForm("Cart", "Cart"))
{
